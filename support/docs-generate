#!/bin/sh -eu

cd "$(dirname "$0")/.."

nix shell \
    --ignore-environment \
    --keep LANG \
    --keep LOCALE_ARCHIVE \
    .#nixpkgs.org2gfm \
    .#nixpkgs.ansifilter \
    .#nixpkgs.coreutils \
    .#nixpkgs.git \
    .#nixpkgs.gnugrep \
    .#nixpkgs.gnutar \
    .#nixpkgs.gzip \
    .#nixpkgs.jq \
    .#nixpkgs.nixfmt \
    .#nixpkgs.tree \
    --command \
    org2gfm \
    --path-bin \
    --exclude internal \
    --nix "$(command -v nix)" \
    --evaluate \
    "$@"
